@page "{id:guid}"
@using TelegramDigest.Web.Models.ViewModels
@model ProgressModel
@{
    ViewData["Title"] = "Digest Generation Progress";
}

@if (Model.Progress == null)
{
    <div class="alert alert-danger">
        An error in frontend occurred while loading the digest progress.
    </div>
    return;
}

<div class="container mt-4">
    <h1>Digest Generation Progress</h1>

    <div class="card mt-4">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">Status: @Model.Progress.Status</h5>

                <button class="btn btn-sm btn-outline-primary" onclick="location.reload();">
                    <i class="bi bi-arrow-clockwise"></i> Refresh
                </button>
            </div>

            <div class="progress mt-3 mb-3">
                <div class="progress-bar" role="progressbar"
                     style="width: @Model.Progress.PercentComplete%;"
                     aria-valuenow="@Model.Progress.PercentComplete"
                     aria-valuemin="0"
                     aria-valuemax="100">
                    @Model.Progress.PercentComplete%
                </div>
            </div>

            @if (Model.Progress.Message != null)
            {
                <p class="card-text">@Model.Progress.Message</p>
            }

            <p class="text-muted">
                Started: @Model.Progress.StartedAt.ToString("MMM dd, yyyy HH:mm:ss")
            </p>

            @if (Model.Progress.CompletedAt.HasValue)
            {
                <p class="text-muted">
                    Completed: @Model.Progress.CompletedAt.Value.ToString("MMM dd, yyyy HH:mm:ss")
                </p>
            }

            <div class="mt-3">
                @if (Model.Progress.Status == DigestStatus.Completed)
                {
                    <a asp-page="/Digest/Index" asp-route-id="@Model.Progress.Id"
                       class="btn btn-success">View Digest</a>
                }
                else if (Model.Progress.Status == DigestStatus.Failed)
                {
                    <a asp-page="/Digests/Index" class="btn btn-primary">Back to Digests</a>
                }
                else
                {
                    <a asp-page="/Digests/Index" class="btn btn-outline-secondary">Back to
                        Digests</a>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @if (Model.Progress.Status != DigestStatus.Completed && Model.Progress.Status != DigestStatus.Failed)
    {
        <script>
            // Refresh the page every 60 seconds to update progress
            setTimeout(function () {
                window.location.reload();
            }, 60000);
        </script>
    }
}
