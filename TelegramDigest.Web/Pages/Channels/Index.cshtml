@page
@model TelegramDigest.Web.Pages.Channels.IndexModel
@{
    ViewData["Title"] = "Feeds";
}

<div class="row">
    <!-- Add Feed link -->
    <a asp-page="/Feeds/Add" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Add New Feed
    </a>

    <!-- Feeds List -->
    <div class="col-md-8">
        <h1>Channels</h1>

        @if (Model.Feeds == null)
        {
            <div class="alert alert-danger">
                Error in frontend. Failed to load feeds.
            </div>
        }
        else if (!Model.Feeds.Any())
        {
            <div class="alert alert-info">
                No Feeds added yet.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th>Name</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var feed in Model.Feeds)
                    {
                        <tr>
                            <td>
                                <a href="@feed.Url" target="_blank" class="text-decoration-none">
                                    @feed.Title
                                    <i class="bi bi-box-arrow-up-right small ms-1"></i>
                                </a>
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <form method="post" asp-page-handler="Delete"
                                          asp-route-tgId="@feed.Url"
                                          class="d-inline"
                                          onsubmit="return confirm('Are you sure you want to delete this feed?');">
                                        <button type="submit" class="btn btn-sm btn-outline-danger"
                                                title="Delete feed">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
