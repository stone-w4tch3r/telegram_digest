@page
@model TelegramDigest.Web.Pages.Digests.GenerateModel
@{
    ViewData["Title"] = "Generate Digest";
}

@if (Model.Form == null)
{
    <div class="alert alert-warning">
        Failed to load Channel. Error in frontend.
    </div>
    return;
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Generate Digest</h1>
        <a asp-page="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back
        </a>
    </div>

    <div class="card">
        <div class="card-body">
            <form method="post" id="generateForm">

                <!-- Date Range -->
                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="@Model.Form.DateFrom" class="form-label"></label>
                            <input asp-for="@Model.Form.DateFrom" type="datetime-local" class="form-control" />
                            <span asp-validation-for="@Model.Form.DateFrom" class="text-danger"></span>
                            <small class="form-text text-muted">UTC time</small>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="@Model.Form.DateTo" class="form-label"></label>
                            <input asp-for="@Model.Form.DateTo" type="datetime-local" class="form-control" />
                            <span asp-validation-for="@Model.Form.DateTo" class="text-danger"></span>
                            <small class="form-text text-muted">UTC time</small>
                        </div>
                    </div>
                </div>

                <!-- Channel Selection -->
                <div class="mb-4">
                    <label class="form-label d-block">Channels</label>
                    <div class="row">
                        @foreach (var channel in Model.Channels)
                        {
                            <div class="col-md-4 mb-2">
                                <div class="form-check">
                                    <input class="form-check-input channel-checkbox" type="checkbox"
                                        name="Form.SelectedChannels" value="@channel.TgId" id="channel_@channel.TgId"
                                        checked="@Model.Form.SelectedChannels.Contains(channel.TgId)" />
                                    <label class="form-check-label" for="channel_@channel.TgId">
                                        @channel.Title
                                    </label>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-play-circle"></i> Generate Digest
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
